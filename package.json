{
  "name": "modular",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "engines": {
    "node": "^12.13.0 || ^14.15.0 || >=15.0.0"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "yarn modular lint",
    "lint:fix": "yarn lint --fix",
    "create-modular-react-app": "ts-node packages/create-modular-react-app/src/cli.ts",
    "modular": "ts-node packages/modular-scripts/src/cli.ts",
    "test": "yarn modular test --watchAll false --runInBand --forceExit",
    "build": "yarn workspace create-modular-react-app build && yarn workspace modular-scripts build && yarn workspace modular-views.macro build",
    "release": "yarn build && changeset publish",
    "start": "yarn modular start modular-site",
    "postinstall": "is-ci || husky install",
    "typecheck": "yarn modular typecheck"
  },
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@changesets/cli": "^2.16.0",
    "@schemastore/package": "^0.0.6",
    "@schemastore/tsconfig": "^0.0.9",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.2.1",
    "@types/babel-plugin-macros": "^2.8.5",
    "@types/dedent": "^0.7.0",
    "@types/find-up": "^4.0.0",
    "@types/fs-extra": "^9.0.12",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "*",
    "@types/npm-packlist": "^1.1.2",
    "@types/prompts": "^2.0.14",
    "@types/puppeteer": "^5.4.4",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/rimraf": "^3.0.1",
    "@types/semver": "^7.3.7",
    "@types/semver-regex": "^3.1.0",
    "@types/tmp": "^0.2.1",
    "@types/update-notifier": "^5.1.0",
    "commander": "^8.1.0",
    "esbuild": "^0.12.15",
    "eslint": "^7.31.0",
    "execa": "^5.1.1",
    "husky": "^7.0.1",
    "is-ci": "^2.0.0",
    "lint-staged": "^11.1.1",
    "micromatch": "^4.0.4",
    "pptr-testing-library": "^0.6.5",
    "prettier": "^2.3.2",
    "puppeteer": "^10.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "semver": "^7.3.5",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "modular": {
    "type": "root"
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn typecheck",
    "*.{js,ts,tsx}": "yarn lint"
  },
  "resolutions": {
    "chalk": "^4.1.1",
    "rollup": "^2.38.3",
    "**/update-notifier/boxen": "^5.0.0",
    "esbuild": "0.12.15"
  }
}
